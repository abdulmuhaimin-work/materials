<%= form_for(@user, url: user_path, html: { id: "user-create-form" }) do |f| %>
  <h1 class="text-center">
    Create User
  </h1>

  <div class="form-group">
    <h4> <%= f.label :email_field, "Email" %> </h4>
    <%= f.text_field :email, required: true, id: "email_field", class: 'form-control' %>
  </div>

  <div class="form-group">
    <h4> <%= f.label :password_digest_field, "Title" %> </h4>
    <%= f.text_field :password_digest, required: true, id: "password_digest_field", class: 'form-control' %>
  </div>
  <div class="form-group">
    <h4> <%= f.label :username_field, "Title" %> </h4>
    <%= f.text_field :username, required: true, id: "username_field", class: 'form-control' %>
  </div>

  <div class="form-group">
      <h4 class="text-center"> User Image </h4>
      <div id="preview-image">
        <% if @user.image? %>
          <%= image_tag @user.image, class: "img-settings img-responsive center-block" %>
        <% end %>
      </div>
  </div>

  <div class="form-group text-center">
    <%= f.submit "Create Topic", class: "btn btn-success btn-lg" %>
  </div>
<% end %>
