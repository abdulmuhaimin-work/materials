<div class="comment" data-id="<%= comment.id%>">
  <div class="comment-title">
    <h5><%= comment.body %></h5>
    <%= image_tag comment.image, class: "img-settings img-responsive center-block" %>
    <div class="content">
      <%= link_to "edit comment", edit_topic_post_comment_path(comment.post.topic, comment.post, comment), remote: true %>
      <%= link_to "Delete comment", topic_post_comment_path(comment.post.topic, comment.post, comment), remote: true, method: :delete, data: { confirm: "Confirm Delete?" } %>
    </div>
  </div>
</div>
