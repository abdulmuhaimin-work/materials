<div class="topic">
  <h1 class="text-center"> Topics </h1>

  <section>
    <div id="topics-big">
      <% @topics.each do |topic| %>
          <%= render partial: "topic", locals: {topic: topic } %>
      <% end %>
    </div>
  </section>
  <div id="topic-form-container">
      <%= render partial: "form", locals: { topic: @topic } %>
  </div>
</div>
